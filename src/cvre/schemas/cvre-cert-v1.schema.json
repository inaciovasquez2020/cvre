{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CVRE Certificate v1",
  "type": "object",
  "required": ["schema", "kind", "polarity", "status", "radius"],
  "properties": {
    "schema": { "const": "cvre-cert-v1" },
    "kind": { "const": "certificate" },
    "polarity": { "enum": ["POS", "NEG"] },
    "status": { "enum": ["VALID", "IMPOSSIBLE"] },
    "radius": { "type": "integer", "minimum": 0 },
    "constraints": { "type": "object" },
    "witness": { "type": "object" },
    "obstruction": { "type": "string" }
  },
  "additionalProperties": true
}
