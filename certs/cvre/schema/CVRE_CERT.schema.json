{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CVRE_CERT",
  "type": "object",
  "required": [
    "cert_id",
    "mode",
    "claim",
    "artifacts",
    "constraints",
    "capacity",
    "non_claims"
  ],
  "properties": {
    "cert_id": { "type": "string" },
    "mode": { "enum": ["POSITIVE","NEGATIVE"] },
    "claim": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "constraints": {
      "type": "array",
      "items": { "type": "string" }
    },
    "capacity": {
      "type": "object",
      "required": ["tokens","time_sec","memory_mb"],
      "properties": {
        "tokens": { "type": "integer", "minimum": 1 },
        "time_sec": { "type": "integer", "minimum": 1 },
        "memory_mb": { "type": "integer", "minimum": 1 }
      }
    },
    "non_claims": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
